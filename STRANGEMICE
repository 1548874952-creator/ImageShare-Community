        document.getElementById('date').textContent = now.toLocaleDateString('zh-CN', options);
        document.getElementById('update-date').textContent = now.toLocaleDateString('zh-CN');
        
        // æ·»åŠ é¼ æ ‡ç‚¹å‡»æ•ˆæœ
        document.querySelector('.mouse-character').addEventListener('click', function() {
            const messages = [
                "å±å±ï¼é¼ é¼ åœ¨è¿™é‡Œï¼",
                "ä»Šå¤©ä¹Ÿè¦å¼€å¿ƒå“¦ï¼",
